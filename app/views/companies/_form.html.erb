<%= form_with(model: company) do |form| %>
  <% if company.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block", class:"mt-1 mb-0.25"  %>
    <%= form.text_field :name, class:"input", placeholder:"Secret planning" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block", class:"mt-1 mb-0.25" %>
    <%= form.text_area :description, class:"input summary", placeholder:"This is the best department yet" %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block", class:"mt-1 mb-0.25" %>
    <%= form.date_field :start_date, placeholder:"dd/mm/yyyy", class:"input" %>
  </div>

  <div>
    <%= form.label :country, style: "display: block", class:"mt-1 mb-0.25" %>
    <%= form.text_field :country, class:"input", placeholder:"Secret planning"  %>
  </div>



    <div>
    <%= form.label :cover, style: "display: block", class:"mt-1 mb-0.25" %>
    <%= form.file_field :cover %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
